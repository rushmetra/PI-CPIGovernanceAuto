<cpilint>
    <rules>
        <!-- Apenas permite linguagem javascript -->
        <!--allowed-scripting-languages>
            <allow>javascript</allow>
        </allowed-scripting-languages-->    
    
        <!-- Apenas permite linguagem groovy -->
        <allowed-scripting-languages>
            <allow>groovy</allow>
        </allowed-scripting-languages> 

        <!-- cada um que envia https deve usar a protecao csrf -->
        <csrf-protection-required/>

        <!-- todo iflow precisa ter uma descrição  -->
        <!--iflow-description-required/-->
        
        <!-- tipos de mapping aceitos -->
        <allowed-mapping-types>
            <allow>message-mapping</allow>
            <allow>xslt-mapping</allow>
        </allowed-mapping-types>

        <!-- não permitir umas versões do xslt -->
        <disallowed-xslt-versions>
            <disallow>1.0</disallow>
        </disallowed-xslt-versions>

    </rules>
</cpilint>
